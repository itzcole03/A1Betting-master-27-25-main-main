{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Live Development Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Auto Launch Development Environment",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceFolder}\\auto-launch.bat"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            }
        },
        {
            "label": "Start Backend Server",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "venv\\Scripts\\activate.bat && uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            }
        },
        {
            "label": "Full Stack Development",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Backend Server",
                "Start Live Development Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build for Production",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "TypeScript Check",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "type-check"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Lint Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "lint"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Watch Sass",
            "type": "shell",
            "command": "sass",
            "args": [
                "--watch",
                "src/styles:src/styles",
                "--style=expanded"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Preview Production Build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "preview"
            ],
            "group": "test",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Clean and Reinstall",
            "type": "shell",
            "command": "rm -rf node_modules package-lock.json && npm install",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        }
    ]
}